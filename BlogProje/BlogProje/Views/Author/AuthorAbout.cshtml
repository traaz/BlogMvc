@model IEnumerable<Entity.Concrete.Blog>
    @foreach(var i in Model)
    {


<div class="sidebar-box">
    <div class="bio text-center">
        <img src="@i.Author.AuthorImage" alt="Image Placeholder" class="img-fluid mb-5">
        <div class="bio-body">
            <h2>@i.Author.AuthorName</h2>
            <p class="mb-4">@i.Author.AuthorAbout</p>
            <p><a href="#" class="btn btn-primary btn-sm rounded px-4 py-2">Diğer Yazılarım</a></p>
          
        </div>
    </div>
</div>
    }
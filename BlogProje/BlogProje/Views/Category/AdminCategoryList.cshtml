@model IEnumerable<Entity.Concrete.Category>
@{

    ViewBag.Title = "AdminCategoryList";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<h2>Kategori Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/deleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
            <td><a href="" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Blog/BlogByCategory/@item.CategoryId" class="btn btn-dark">Yazılar</a></td>
        </tr>
    }

</table>
<a href="/Category/AddCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
@model IEnumerable<Entity.Concrete.Author>

@using(Html.BeginForm("UpdateUserProfile", "User", FormMethod.Post))
            {

           
foreach(var item in Model)
{


<form class="form-horizontal">
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Yazar Id</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" name="AuthorId" value="@item.AuthorId">

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" name="AuthorName" value="@item.AuthorName">

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Mail</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" name="AuthorMail" value="@item.AuthorMail">

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" name="AuthorTitle" value="@item.AuthorTitle">

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">Telefon</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" name="PhoneNumber" value="@item.PhoneNumber">

        </div>

    </div>

    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Fotoğraf</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" name="AuthorImage" value="@item.AuthorImage">

        </div>

    </div>
    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" name="AuthorPassword" value="@item.AuthorPassword">

        </div>

    </div>
    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">



            <label>

                <input type="text">Şifre Güncellemek İstiyorum

            </label>



        </div>

    </div>
    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Hakkında</label>

        <div class="col-sm-10">

            <input type="text" class="form-control" id="inputSkills" value="@item.AuthorAbout">

        </div>

    </div>



    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Güncelle</button>

        </div>

    </div>

</form>
}
}